@using Models;
@model User;
@{
    ViewData["Title"] = "Profile";
}
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    a {
        text-decoration: none;
        font-size: 22px;
        color: black;
    }

        button:hover, a:hover {
            opacity: 0.7;
        }
</style>
<div class="card">
    <img src="~/img/logo/logo.png" alt="John" style="width:100%">
    <h1>@Model.Full_Name</h1>
    <p class="title">@Model.Email</p>
    <p>@Model.Adrress</p>
    <p>@Model.SSN</p>
    <p><button>Edit Profile</button></p>
</div>

